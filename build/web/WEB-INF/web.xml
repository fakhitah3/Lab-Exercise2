<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>BMIServelet</servlet-name>
        <servlet-class>Servlet.BMIServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>currencyExchange</servlet-name>
        <servlet-class>Servlet.currencyExchangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tuitionCalculation</servlet-name>
        <servlet-class>Servlet.tuitionCalculationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreviewSurvey</servlet-name>
        <servlet-class>Servlet.PreviewSurvey</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>markConverter</servlet-name>
        <servlet-class>Servlet.markConverterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gradeCalculator</servlet-name>
        <servlet-class>Servlet.gradeCalculator</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BMIServelet</servlet-name>
        <url-pattern>/bmi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>currencyExchange</servlet-name>
        <url-pattern>/currencyExchange</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tuitionCalculation</servlet-name>
        <url-pattern>/tuitionCalculation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreviewSurvey</servlet-name>
        <url-pattern>/PreviewSurvey</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>markConverter</servlet-name>
        <url-pattern>/markConverter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gradeCalculator</servlet-name>
        <url-pattern>/gradeCalculator</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
